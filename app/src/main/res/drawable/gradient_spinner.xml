<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:startColor="#80b3c0ff" android:endColor="#80b3c0ff" android:type="linear" />
                    <stroke android:width="0.1dp" android:color="#000000" />
                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="bottom|right" android:src="@drawable/down_arrow" />
            </item>
        </layer-list>
    </item>

</selector>  