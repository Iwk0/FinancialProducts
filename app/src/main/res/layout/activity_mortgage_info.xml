<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bg.financialproducts.info.ConsumerInfoActivity">

    <TextView
        android:id="@+id/aprLabel"
        android:text="@string/apr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/apr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aprLabel" />

    <TextView
        android:id="@+id/currencyLabel"
        android:text="@string/currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apr" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currencyLabel" />

    <TextView
        android:id="@+id/monthlyPaymentLabel"
        android:text="@string/monthly_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currency" />

    <TextView
        android:id="@+id/monthlyPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthlyPaymentLabel" />

    <TextView
        android:id="@+id/totalPayedLabel"
        android:text="@string/total_payed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthlyPayment" />

    <TextView
        android:id="@+id/totalPayed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalPayedLabel" />

    <TextView
        android:id="@+id/downPaymentLabel"
        android:text="@string/down_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalPayed" />

    <TextView
        android:id="@+id/downPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downPaymentLabel" />

    <TextView
        android:id="@+id/interestRateTypeLabel"
        android:text="@string/interest_rate_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/downPayment" />

    <TextView
        android:id="@+id/interestRateType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interestRateTypeLabel" />

    <Button
        android:id="@+id/backButton"
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>