<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bg.financialproducts.info.ConsumerInfoActivity">

    <TextView
        android:id="@+id/AERLabel"
        android:text="@string/aer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/AER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AERLabel" />

    <TextView
        android:id="@+id/interestRateTypeLabel"
        android:text="@string/interest_rate_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AER" />

    <TextView
        android:id="@+id/interestRateType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interestRateTypeLabel" />

    <TextView
        android:id="@+id/afterRevenueTaxAmountLabel"
        android:text="@string/after_revenue_tax_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interestRateType" />

    <TextView
        android:id="@+id/afterRevenueTaxAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/afterRevenueTaxAmountLabel" />

    <Button
        android:id="@+id/backButton"
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>